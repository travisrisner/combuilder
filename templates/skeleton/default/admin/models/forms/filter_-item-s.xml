<form>
    <fields name='filter'>
        <field name='search' type='text' hint='JSEARCH_FILTER' class='js-stools-search-string'/>
        <field name='published' type='status' filter='-2,0,1' onchange='this.form.submit()'>
            <option disabled='1' selected='1' value=''>JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>
    <fields name='list'>
        <field name='limit' type='limitbox' class='input-mini' default='20' onchange='this.form.submit()'/>
    </fields>
</form>
